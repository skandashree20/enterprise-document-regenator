    {
      "parameters": {
        "jsCode": "// Prepare PDF for extraction\nconst item = $input.first();\nconst fileInfo = item.json;\nconst binaryData = item.binary?.data;\n\nif (!binaryData) {\n  return [{\n    json: {\n      ...fileInfo,\n      status: 'error',\n      error_message: 'No binary data found for PDF extraction'\n    }\n  }];\n}\n\nreturn [{\n  json: {\n    file_id: fileInfo.file_id,\n    file_name: fileInfo.file_name,\n    mime_type: fileInfo.mime_type,\n    extension: fileInfo.extension,\n    processor_type: 'pdf',\n    processing_started: new Date().toISOString()\n  },\n  binary: item.binary\n}];"
      },
      "id": "prepare-pdf",
