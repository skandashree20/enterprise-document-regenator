    },
    {
      "parameters": {
        "jsCode": "// Process extracted text\nconst item = $input.first();\nconst extractedText = item.json.text || '';\nconst metadata = item.json;\n\n// Clean up the text\nconst cleanText = extractedText\n  .replace(/\\s+/g, ' ')  // Normalize whitespace\n  .replace(/\\n{3,}/g, '\\n\\n')  // Reduce excessive newlines\n  .trim();\n\n// Get word count and basic stats\nconst wordCount = cleanText.split(/\\s+/).filter(w => w.length > 0).length;\nconst charCount = cleanText.length;\n\nreturn [{\n  json: {\n    file_id: metadata.file_id || $input.first().json.file_id,\n    file_name: metadata.file_name || $input.first().json.file_name,\n    mime_type: metadata.mime_type,\n    extension: 'pdf',\n    extracted_text: cleanText,\n    word_count: wordCount,\n    char_count: charCount,\n    status: 'processed',\n    processor_type: 'pdf',\n    processing_completed: new Date().toISOString()\n  }\n}];"
      },
